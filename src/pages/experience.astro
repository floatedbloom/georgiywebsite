---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const pageTitle = "Work";

title: "Work"
layout: Layout
description: "This is the work experience page."
---

<Layout title="Work Experience • George">
	<main>
		<head>
            <meta name="viewport" content="initial-scale=1, width=device-width">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
            <title>{pageTitle}</title>
            <style>
                .text-gradient {
                    background-image: var(--accent-gradient);
                    -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent;
                    background-size: 400%;
                    background-position: 0%;
                }
                .size {
                    font-size: 1.5rem; /* Adjusted to use rem for responsiveness */
                }
                .central {
                    text-align: center; /* Center align the text */
                }
                @media (max-width: 768px) {
                    .size {
                        font-size: 1.2rem; /* Smaller font size for mobile */
                    }
                }
                .text-grid {
                    display: inline-grid;
                    grid-template-columns: repeat(1, minmax(0, 40em)); /* Adjusts to 2 columns */
                    grid-gap: 1em;
                    justify-content: center;
                    background: rgba(255, 255, 255, 0.2);
                    padding: 1em;
                    border-radius: 1em;
                    position: relative;
                }

                /* Each Sentence */
                .sentence {
                    opacity: 0;
                    transform: translateY(10px); /* Starts slightly lower */
                    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
                }

                /* Staggered animation for each sentence */
                .sentence:nth-child(1) { transition-delay: 0s; }
                .sentence:nth-child(2) { transition-delay: 0.1s; }
                .sentence:nth-child(3) { transition-delay: 0.2s; }
                .sentence:nth-child(4) { transition-delay: 0.3s; }
                .sentence:nth-child(5) { transition-delay: 0.4s; }
                .sentence:nth-child(6) { transition-delay: 0.5s; }
                .sentence:nth-child(7) { transition-delay: 0.6s; }
                .sentence:nth-child(8) { transition-delay: 0.7s; }
                .sentence:nth-child(9) { transition-delay: 0.8s; }
                .sentence:nth-child(10) { transition-delay: 0.9s; }
                .sentence:nth-child(11) { transition-delay: 1.0s; }
                .sentence:nth-child(12) { transition-delay: 1.1s; }
                .sentence:nth-child(13) { transition-delay: 1.2s; }
                .sentence:nth-child(14) { transition-delay: 1.3s; }
                .sentence:nth-child(15) { transition-delay: 1.4s; }
                .sentence:nth-child(16) { transition-delay: 1.5s; }
                .sentence:nth-child(17) { transition-delay: 1.6s; }
                .sentence:nth-child(18) { transition-delay: 1.7s; }
                .sentence:nth-child(19) { transition-delay: 1.8s; }
                .sentence:nth-child(20) { transition-delay: 1.9s; }
                .sentence:nth-child(21) { transition-delay: 2.0s; }
                .sentence:nth-child(22) { transition-delay: 2.1s; }
                .sentence:nth-child(23) { transition-delay: 2.2s; }
                .sentence:nth-child(24) { transition-delay: 2.3s; }

                .text-grid:hover .sentence {
                    opacity: 1;
                    transform: translateY(0);
                }

                /* Accessibility: Reduce Motion */
                @media (prefers-reduced-motion: reduce) {
                    * {
                        transition-duration: 0.1ms !important;
                        transition-delay: 0s !important;
                    }
                }

                .text-grid::before {
                content: "hover";
                text-transform: uppercase;
                color: #fad0c4;
                font-weight: bold;
                font-size: 1.5em;
                left: 45%;
                top: 45%;
                position: absolute;
                transition: opacity 0.2s 3s ease-out;
                }

                .text-grid:hover::before {
                opacity: 0;
                transition-delay: 0s;
                }
                .smaller {
                    font-size: 1.5rem;
                }
                .mini {
                    font-size: 1rem;
                    color: #d3c6c6;
                }
            </style>
        </head>
        <body>
            <div class="container">
                <h1><span class="text-gradient central">{pageTitle}</span></h1>
                <div class="text-grid">
                    <div class="text-gradient sentence smaller ">• Private Math Tutor (June 2022 - Current)</div>
                    <div class="sentence mini ">  Tutored Eight Grader to Skip a Year of Math</div>
                    <div class="sentence mini ">  Tutored Several High Schoolers in Algebra and Trigonometry</div>
                    <div class="sentence mini ">  Tutored Several College Students Calculus and Higher Math</div>
                    <div class="text-gradient sentence smaller">• EvCC MESA Ambassador (Jan 2024 - Current)</div>
                    <div class="sentence mini ">  Tutored College Students in CS, Math, Chemistry, Physics</div>
                    <div class="sentence mini ">  Created and Led Workshops Encouraging Collaboration and Deep Dives in 8 Different Subjects</div>
                    <div class="sentence mini ">  Helped with Advertisement for the Program</div>
                    <div class="text-gradient sentence smaller"> Always Open to New Opportunities :)</div>
                </div>
            </div>
        </body>
	</main>
</Layout>