---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const pageTitle = "Date";

title: "Date"
layout: Layout
description: "This is the date page."
---

<Layout title="Date â€¢ George">
	<main>
		<head>
            <meta name="viewport" content="initial-scale=1, width=device-width">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
            <title>{pageTitle}</title>
            <style>
                .popup {
                    display: none; /* Hidden by default */
                    position: fixed; /* Stay in place */
                    z-index: 1; /* Sit on top */
                    left: 0;
                    top: 0;
                    width: 100%; /* Full width */
                    height: 100%; /* Full height */
                    background-color: rgba(0, 0, 0, 0.4); /* Black w/ opacity */
                    justify-content: center;
                    align-items: center;
                    font-size: 3em;
                }
                .popup-content {
                    padding: 40px;
                    border-radius: 10px;
                    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                    width: 160%;
                    max-width: 1200px;
                    text-align: center;
                    margin: 0;
                    background: linear-gradient(315deg, rgb(0, 4, 255) 3%, rgb(255, 0, 234) 38%, rgb(200, 255, 0) 68%, rgb(255, 0, 0) 98%) ;
                    animation: gradient 15s ease infinite ;
                    background-attachment: fixed;
                    color: rgb(205, 231, 205);
                }
                .padded {
                    padding: 15em;
                }
                .date-button {
                    display: inline-block;
                    padding: 24px 48px;
                    background-color: #4CAF50; /* Green background color */
                    color: #fff; /* White text color */
                    border: 4px solid #4CAF50; /* Green border */
                    border-radius: 60px; /* Rounded corners */
                    font-size: 36px; /* Font size */
                    font-weight: bold; /* Bold text */
                    text-decoration: none; /* Remove underline */
                    text-transform: uppercase; /* Uppercase text */
                    transition: background-color 0.3s, color 0.3s, border-color 0.3s; /* Smooth transitions */
                    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Box shadow for depth */
                    outline: none; /* Remove default focus outline */
                }

                .date-button:hover {
                    background-color: #45a049; /* Darker green on hover */
                    border-color: #45a049; /* Darker border color on hover */
                    color: #fff; /* White text color on hover */
                    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.3); /* Enhanced box shadow on hover */
                }

                .date-button:focus {    
                    box-shadow: 0 0 0 6px rgba(76, 175, 80, 0.4); /* Lighter outline on focus */
                }
                
                .date-button:active {
                    transform: translateY(4px); /* Push button down slightly on click */
                }
                .loading-frame {
                    position: absolute;
                    top: 35%;
                    left: 45%;
                }
                .circle {
                    position: absolute;
                    height: 30px;
                    width: 30px;
                    border-radius: 30px;
                    background-color: #3FC380;
                    animation: animate linear 2s infinite;
                    z-index: 1;
                }
                .circle:nth-child(1) {
                    animation-delay: 0.9s;
                }
                .circle:nth-child(2) {
                    animation-delay: 1.1s;
                    transform: translate(18px,13px);
                }
                .circle:nth-child(3) {
                    animation-delay: 1.3s;
                    transform: translate(35px,25px);
                }
                .circle:nth-child(4) {
                    animation-delay: 1.1s;
                    transform: translate(18px,38px);
                }
                .circle:nth-child(5) {
                    animation-delay: 0.9s;
                    transform: translate(0px,50px);
                }
                .circle:nth-child(6) {
                    animation-delay: 0.9s;
                    transform: translate(0,25px);
                }
                .circle:nth-child(7) {
                    animation-delay: 0.7s;
                    transform: translate(-20px,25px);
                }
                .circle:nth-child(8) {
                    animation-delay: 0.5s;
                    transform: translate(-40px,25px);
                }
                .circle:nth-child(9) {
                    animation-delay: 0.3s;
                    transform: translate(-60px,25px);
                }
                .circle:nth-child(10) {
                    animation-delay: 0.1s;
                    transform: translate(-80px,25px);
                }
                @keyframes animate {
                    0%, 100% {
                        background-color: #3FC380;
                    }
                    50% {
                        background-color: #fff;
                    }
                }
                .normal {
                    display: none;
                    left: -540px;
                    top: -60px;
                    z-index: 2;
                }
                .flip {
                    display: none;
                    left: 860px;
                    top: 10px;
                    z-index: 2;
                    rotate: 180deg;
                }
                .down {
                    left: 180px;
                    top: -200px;
                    display: none;
                    z-index: 2;
                    rotate: 90deg;
                }
                .up {
                    left: 100px;
                    top: 130px;
                    display: none;
                    z-index: 2;
                    rotate: 270deg;
                }
                .upleft {
                    display: none;
                    left: 700px;
                    top: 160px;
                    z-index: 2;
                    rotate: 225deg;
                }
                .upright {
                    display: none;
                    left: -460px;
                    top: 100px;
                    z-index: 2;
                    rotate: 315deg;
                }
                .downleft {
                    display: none;
                    left: 780px;
                    top: -155px;
                    z-index: 2;
                    rotate: 135deg;
                }
                .downright {
                    display: none;
                    left: -400px;
                    top: -210px;
                    z-index: 2;
                    rotate: 45deg;
                }
                .loading-container {
                    position: relative;
                    display: flex;
                    flex-wrap: wrap;
                    align-items: center;
                    justify-content: center;
                }
                #date {
                    font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
                    text-transform: capitalize;
                    font-weight: bold;
                    font-style: normal;
                }
            </style>
        </head>
        <body class="body">
            <div class="container">
                <h1><span class="text-gradient" id="title">{pageTitle}</span></h1>
                <a class="homepage-button" id="home" role="link" href="/">Homepage</a>
                <div class="padded">
                    <div class="loading-container">
                        <ul class="loading-frame normal" id="normal">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame down" id="down">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame downleft" id="downleft">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame downright" id="downright">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame flip" id="flip">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame up" id="up">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame upright" id="upright">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <ul class="loading-frame upleft" id="upleft">
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                            <div class="circle"></div>
                        </ul>
                        <button class="date-button" type="button" id="open_popup">Give the date</button>
                    </div>
                </div>
            </div>
            <div id="popup" class="popup">
                <div class="popup-content">
                    <span class="close" id="close_popup">&times;</span>
                    <var id="date">___</var>
                </div>
            </div>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Get the elements
                    const openButton = document.getElementById("open_popup") as HTMLButtonElement | null;
                    const popup = document.getElementById("popup") as HTMLDivElement | null;
                    const closeButton = document.getElementById("close_popup") as HTMLSpanElement | null;
                    const dateElement = document.getElementById("date") as HTMLSpanElement | null;

                    const contentContainer = document.querySelector('.loading-container') as HTMLDivElement | null;
                    const container = document.querySelector('.container') as HTMLDivElement;

                    const title = document.getElementById("title") as HTMLDivElement;
                    const home = document.getElementById("home") as HTMLDivElement;

                    const normal = document.getElementById("normal") as HTMLDivElement;
                    const flip = document.getElementById("flip") as HTMLDivElement;
                    const up = document.getElementById("up") as HTMLDivElement;
                    const upleft = document.getElementById("upleft") as HTMLDivElement;
                    const upright = document.getElementById("upright") as HTMLDivElement;
                    const down = document.getElementById("down") as HTMLDivElement;
                    const downleft = document.getElementById("downleft") as HTMLDivElement; 
                    const downright = document.getElementById("downright") as HTMLDivElement;
                
                    // Hide the popup initially
                    if (popup) {
                        popup.style.display = "none";
                    }

                    if (normal && flip && up && down && upleft && upright && downleft && downright) {
                        normal.style.display = "none";
                        flip.style.display = "none";
                        up.style.display = "none";
                        down.style.display = "none";
                        upleft.style.display = "none";
                        upright.style.display = "none";
                        downleft.style.display = "none";
                        downright.style.display = "none";
                    }
                
                    // Check if all elements exist
                    if (openButton && popup && closeButton && dateElement && contentContainer) {
                    openButton.addEventListener('click', function () {
                        const currentDate = new Date();
                        const options: Intl.DateTimeFormatOptions = { month: 'long', day: 'numeric', year: 'numeric' };
                        const stringDate = currentDate.toLocaleDateString('en-US', options);
                        dateElement.textContent = stringDate;
                        popup.style.display = "flex"; // Show the popup
                        title.style.filter = "blur(5px)"; // Blur the background
                        home.style.filter = "blur(5px)";
                        openButton.style.filter = "blur(5px)";

                        up.style.display = "inline-block";
                        down.style.display = "inline-block";
                        normal.style.display = "inline-block";
                        flip.style.display = "inline-block";
                        downright.style.display = "inline-block";
                        downleft.style.display = "inline-block";
                        upright.style.display = "inline-block";
                        upleft.style.display = "inline-block";
                    });
                
                    closeButton.addEventListener('click', function () {
                        popup.style.display = "none"; // Hide the popup
                        container.style.filter = "none"; // Remove the blur effect
                        up.style.display = "none";
                        down.style.display = "none";
                        normal.style.display = "none";
                        flip.style.display = "none";
                        downright.style.display = "none";
                        downleft.style.display = "none";
                        upright.style.display = "none";
                        upleft.style.display = "none";
                    });
                
                    // Close the popup if the user clicks outside of it
                    window.addEventListener('click', function(event) {
                        if (event.target === popup) {
                            popup.style.display = "none";
                            title.style.filter = "none";
                            home.style.filter = "none";
                            openButton.style.filter = "none";
                            up.style.display = "none";
                            down.style.display = "none";
                            normal.style.display = "none";
                            flip.style.display = "none";
                            downright.style.display = "none";
                            downleft.style.display = "none";
                            upright.style.display = "none";
                            upleft.style.display = "none";
                        }
                    });
                    } 
                    else {
                        console.error("One or more elements not found");
                        }
                });
            </script>
        </body>
	</main>
</Layout>
