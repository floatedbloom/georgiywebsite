import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Plants vs Zombies â€¢ George">
	<main>
		<head>
			<meta name="viewport" content="initial-scale=1, width=device-width">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
			<title>Welcome!</title>
		</head>
		<body class="body">
			<div class="container">
				<h1 class="text-gradient size">Plants vs. Zombies</h1>
				<a class="homepage-button" role="link" href="/">Homepage</a>
				<a role="link" href="/hobbies" class="btn back-button btn-outline-secondary">Back</a>
				<div class="pvz-page">
					<p> 
						Plants vs. Zombies is one of my favorite video game franchises, I've played games from this series throughout my entire life. I've particularly played the
						third-person shooters a lot throughout the past 5 years as I've been slowly working toward reaching the max rank in each game.
					</p>
					<table class="ftimes centered border central box-thing">
						<tr>
						<th class="game">Game</th>
						<th>Rank/MAX</th>
						<th>Hours Played</th>
						<th>Wiki Page</th>
						</tr>
						<tr>
						<td class="game">Garden Warfare</td>
						<td class="small"><img src="95gw1.jpg" width="20px">95 / <img src="313gw1.jpg" width="20px">313</td>
						<td>95</td>
						<td><a href="https://plantsvszombies.fandom.com/wiki/Plants_vs._Zombies:_Garden_Warfare">Wiki</a></td>
						</tr>
						<tr>
						<td class="game">Garden Warfare 2</td>
						<td><img src="gw2.png" width="50px"> / <img src="gw2.png" width="50px"></td>
						<td>413</td>
						<td><a href="https://plantsvszombies.fandom.com/wiki/Plants_vs._Zombies:_Garden_Warfare_2">Wiki</a></td>
						</tr>
						<tr>
						<td class="game">Battle for Neighborville</td>
						<td><img src="bfnmaxrank.png" width="50px"> / <img src="bfnmaxrank.png" width="50px"></td>
						<td>373</td>
						<td><a href="https://plantsvszombies.fandom.com/wiki/Plants_vs._Zombies:_Battle_for_Neighborville">Wiki</a></td>
						</tr>
					</table>
				</div>
			</div>
		</body>
	</main>
</Layout>

<style>
	.pvz-page {
		font-family: 'Roboto', sans-serif;
		padding: 20px;
		font-size: 20px;
	}
	.size {
		font-size: 4em !important;
	}

	.small {
		font-size: 18px;
	}

	.pvz-page h1 {
		font-size: 2.8em;
		margin-bottom: 20px;
	}

	.pvz-page p {
		font-size: 1.2em;
		line-height: 1.6;
		color:rgb(39, 165, 123);
	}

	.game {
		color:purple;
		font-weight: bold;
	}
	.pvz-page .content {
		padding: 25px;
		border-radius: 8px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}
</style>
