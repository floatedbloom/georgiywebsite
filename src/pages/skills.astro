<style>
    .skills-container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        max-width: 1000px;
        width: 100%;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
        backdrop-filter: blur(15px);
        border: 2px solid rgba(168, 162, 158, 0.2);
        padding: 1.25rem;
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transform: scale(0.85);
    }

    .skill-row {
        display: flex;
        align-items: flex-start;
        gap: 2rem;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        justify-content: center;
    }

    .category-label {
        font-size: 1.3rem;
        font-weight: 700;
        min-width: 120px;
        text-align: left;
        background: #383a3c;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        flex-shrink: 0;
        padding-top: 0.5rem;
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.975rem;
        flex: 1;
    }

    .skill-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.39rem;
        padding: 0.728rem 0.4875rem;
        border-radius: 0.728rem;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
        border: 2px solid rgba(168, 162, 158, 0.2);
        transition: all 0.3s ease;
        min-height: 69px;
        min-width: 78px;
        justify-content: center;
    }

    .skill-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(139, 92, 246, 0.2);
    }

    .skill-item:hover .tech-icon {
        transform: scale(1.1);
    }

    .skill-item span {
        font-weight: 600;
        font-size: 0.832rem;
        text-align: center;
        line-height: 1.2;
        color: #111827;
    }

    .skill-item {
        border: 2px solid rgba(168, 162, 158, 0.2);
    }

    .skill-item .tech-icon {
        font-size: 1.755rem;
    }

    .skill-item img.tech-icon {
        width: 2.34rem;
        height: 2.34rem;
    }

    .skill-item span {
        color: #111827;
        font-weight: 700;
        font-size: 0.8775rem;
        text-shadow: none;
    }

    /* Match Astro logo to theme */
    .skills-container .astro-icon path {
        fill: #383a3c;
    }

    /* Adjust padding for mobile top navigation */
    @media (max-width: 768px) {
        main {
            padding-top: 84px;
            padding-bottom: 10px !important;
        }

        .page-header {
            margin-bottom: -5rem !important;
        }
    }
</style>