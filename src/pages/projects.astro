---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const pageTitle = "Projects";

title: "Projects"
layout: Layout
description: "This is the projects page."
---

<Layout title="Projects â€¢ George">
    <main>
        <head>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
            <title>{pageTitle}</title>

        </head> 
        <body>
            <div class="page-header">
                <h1><span class="text-gradient">{pageTitle}</span></h1>
            </div>
            <div class="grid">
                <Card title="Homepage" body="This website" href="https://floatedbloom.netlify.app/" bgImage="/zhe.ico"></Card>
                <Card title="BloomQuiz" body="Quiz Sharing Study Website" href="https://floatedbloom.pythonanywhere.com/" bgImage="/flowernoback.png"></Card>
                <Card title="Flutter Recipes" body="Recipe Social Media App" href="https://github.com/floatedbloom/flutter_recipes" bgImage="/recipedone.png"></Card>
                <Card title="LSHS Clubs" body="Website Hub" href="https://github.com/floatedbloom/csclub_website" bgImage="/lshsnoback.png"></Card>
                <Card title="Math Derust" body="High School Math App" href="https://play.google.com/store/apps/details?id=com.georgiylapin.math_derust&hl=en_US" bgImage="/mathnoback.png"></Card>
                <Card title="CoffeeSim" body="Eulerian Fluid Dynamics Playground" href="https://vipr728.github.io/FluidSimulation/FluidSim/" bgImage="/coffeesim.png"></Card>
            </div>
        </body>
    </main>
</Layout>
<style>
    .grid {
		display: inline-grid;
		grid-template-columns: repeat(3, minmax(0, 10em)); /* 3 columns on desktop */
		grid-gap: 2em;
		justify-content: center;
		padding: 1em;
		border-radius: 1em;
		position: relative;
	}

    /* Responsive grid layout - maintain 3 columns by making cards smaller */
    @media (max-width: 1024px) {
        .grid {
            grid-template-columns: repeat(3, minmax(0, 9em)); /* Keep 3 columns, slightly smaller */
            grid-gap: 1.5em;
        }
    }

    @media (max-width: 768px) {
        .grid {
            grid-template-columns: repeat(3, minmax(0, 7em)); /* Keep 3 columns, smaller cards */
            grid-gap: 1em;
            padding: 0.8em;
        }
    }

    @media (max-width: 480px) {
        .grid {
            grid-template-columns: repeat(2, minmax(0, 9em)); /* 2 columns with larger cards on mobile */
            grid-gap: 1em;
            padding: 0.8em;
        }
    }

    /* Make cards smaller on mobile for projects page specifically */
    @media (max-width: 768px) {
        .grid .link-card {
            min-height: 120px; /* Reduce card height on tablets */
            font-size: 0.75rem;
        }
    }

    @media (max-width: 480px) {
        .grid .link-card {
            min-height: 160px; /* Larger cards on mobile with 2-column layout */
            font-size: 0.8rem; /* Larger text for better readability */
        }
        
        .grid .link-card h2 {
            font-size: 1em; /* Larger heading text */
            margin-bottom: 0.4rem;
        }
        
        .grid .link-card p {
            font-size: 0.85em; /* Larger body text */
            line-height: 1.3;
        }
        
        .grid .link-card > a {
            padding: calc(0.8rem - 1px); /* More padding for larger touch targets */
        }
    }

    .bottom-padding {
        padding-bottom: 0.5em;
    }

    /* Responsive bottom padding */
    @media (max-width: 480px) {
        .bottom-padding {
            padding-bottom: 0.3em;
        }
    }
</style>