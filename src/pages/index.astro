---
import Layout from "../layouts/Layout.astro"
import BottomNav from "../components/BottomNav.astro"

title: "Welcome to My Site"
layout: Layout
description: "This is the home page of my site."
---

<Layout title="Homepage â€¢ George">
	<head>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
		<title>Welcome!</title>
		<style>
			main {
				margin: auto;
				padding: 1rem;
				width: 100%;
				max-width: 800px; /* Adjusted for better scaling */
				color: rgb(19, 18, 18);
				font-size: 1.25rem; /* Converted to rem for better scalability */
				line-height: 1.6;
			}

			/* Responsive main container */
			@media (max-width: 768px) {
				main {
					padding: 0.5rem;
					font-size: 1rem;
				}
			}

			@media (max-width: 480px) {
				main {
					padding: 0.25rem;
					font-size: 0.9rem;
				}
			}

			.astro-a {
				position: absolute;
				top: -2rem; /* Adjusted to rem */
				left: 50%;
				transform: translateX(-50%);
				width: 13.75rem; /* Converted to rem */
				height: auto;
				z-index: -1;
			}
			h1 {
				font-size: 2.5rem; /* Reduced size for better fit on mobile */
				font-weight: 700;
				line-height: 1;
				text-align: center;
				margin-bottom: 1em;
			}

			/* Desktop-only h1 size reduction */
			@media (min-width: 1025px) {
				h1 {
					font-size: 2rem; /* Reduced from 2.5rem for desktop */
				}
			}

			/* Responsive h1 sizing */
			@media (max-width: 768px) {
				h1 {
					font-size: 2rem;
				}
			}

			@media (max-width: 480px) {
				h1 {
					font-size: 1.5rem;
				}
			}

			.instructions {
				margin-bottom: 2rem;
				border: 1px solid rgba(var(--accent-light), 25%);
				background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
				padding: 1.5rem;
				border-radius: 0.5rem; /* Converted to rem */
			}
			.instructions code {
				font-size: 0.8em; /* Already relative */
				font-weight: bold;
				background: rgba(var(--accent-light), 12%);
				color: rgb(var(--accent-light));
				border-radius: 0.25rem; /* Converted to rem */
				padding: 0.3em 0.4em;
			}
			.instructions strong {
				color: rgb(var(--accent-light));
			}
			.link-card-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(12ch, 1fr)); /* Adjusted for smaller screens */
				gap: 1rem; /* Reduced gap for better spacing on mobile */
				padding: 0;
			}
			.text-gradient {
				background-image: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-size: 400%;
				background-position: 0%;
			}
			.btn-custom {
				margin: 0.5rem 0; /* Add margin for spacing between buttons on mobile */
				width: 100%; /* Make buttons full-width on small screens */
			}
			.name {
				font-size: clamp(3rem, 8vw, 8rem); /* Doubled from previous sizes - 100% bigger */
			}

			/* Desktop-only name size reduction */
			@media (min-width: 1025px) {
				.name {
					font-size: clamp(2.5rem, 6vw, 6rem); /* Reduced max size for desktop */
				}
			}

			/* Responsive name sizing for different screen sizes */
			@media (max-width: 768px) {
				.name {
					font-size: clamp(5rem, 20vw, 12rem); /* Doubled tablet size */
				}
			}

			@media (max-width: 480px) {
				.name {
					font-size: clamp(4rem, 16vw, 8rem); /* Doubled mobile size */
				}
			}

			.stack {
			display: grid;
			grid-template-columns: 1fr;
			}

			.stack span {
			font-weight: bold;
			font-size: clamp(1.5rem, 6vw, 4rem); /* Doubled from previous sizes - 100% bigger */
			color: white; /* Ensure text is visible */
			text-shadow: 2px 2px 5px rgba(255, 255, 255, 0.6);
			grid-row-start: 1;
			grid-column-start: 1;
			--stack-height: calc(100% / var(--stacks) - 1px);
			--inverse-index: calc(calc(var(--stacks) - 1) - var(--index));
			--clip-top: calc(var(--stack-height) * var(--index));
			--clip-bottom: calc(var(--stack-height) * var(--inverse-index));
			clip-path: inset(var(--clip-top) 0 var(--clip-bottom) 0);
			animation: stack 340ms cubic-bezier(.46,.29,0,1.24) 1 backwards calc(var(--index) * 120ms), glitch 2s ease infinite 2s alternate-reverse;
			}

			/* Responsive stack text */
			@media (max-width: 768px) {
				.stack span {
					font-size: clamp(2.4rem, 10vw, 6rem); /* Doubled tablet size */
				}
			}

			@media (max-width: 480px) {
				.stack span {
					font-size: clamp(2rem, 8vw, 5rem); /* Doubled mobile size */
				}
			}

			.stack span:nth-child(odd) { --glitch-translate: 8px; }
			.stack span:nth-child(even) { --glitch-translate: -8px; }

			/* Reduce glitch translate on mobile */
			@media (max-width: 480px) {
				.stack span:nth-child(odd) { --glitch-translate: 4px; }
				.stack span:nth-child(even) { --glitch-translate: -4px; }
			}

			@keyframes stack {
			0% {
				opacity: 0;
				transform: translateX(-50%);
				text-shadow: -2px 3px 0 #d368ca, 2px -3px 0 rgb(237, 206, 241);
			};
			60% {
				opacity: 0.5;
				transform: translateX(50%);
			}
			80% {
				transform: none;
				opacity: 1;
				text-shadow: 2px -3px 0 #d368ca, -2px 3px 0 rgb(237, 206, 241);
			}
			100% {
				text-shadow: none;
			}
			}

			@keyframes glitch {
			0% {
				text-shadow: -2px 3px 0 #d368ca, 2px -3px 0 rgb(237, 206, 241);
				transform: translate(var(--glitch-translate));
			}
			2% {
				text-shadow: 2px -3px 0 #d368ca, -2px 3px 0 rgb(237, 206, 241);
			}
			4%, 100% {  text-shadow: none; transform: none; }
			}
		</style>
	</head>
	<body class="bg-dark text-light">
		<main>
			<div class="fullscreen-container">
				<div>
					<h1 class="text-gradient mb-4 name">George Lapin</h1>
					<div class="stack" style="--stacks: 3;">
						<span style="--index: 0;">Full Stack Developer</span>
						<span style="--index: 1;">Full Stack Developer</span>
						<span style="--index: 2;">Full Stack Developer</span>
					</div>
				</div>
			</div>
		</main>	
	</body>

</Layout>
