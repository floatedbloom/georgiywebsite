<Layout title="Homepage â€¢ George">
	<head>
		<meta name="viewport" content="initial-scale=1, width=device-width">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
		<title>Welcome!</title>
		<style>
			main {
				margin: auto;
				padding: 1rem;
				width: 100%;
				max-width: 800px; /* Adjusted for better scaling */
				color: rgb(19, 18, 18);
				font-size: 1.25rem; /* Converted to rem for better scalability */
				line-height: 1.6;
			}
			.astro-a {
				position: absolute;
				top: -2rem; /* Adjusted to rem */
				left: 50%;
				transform: translateX(-50%);
				width: 13.75rem; /* Converted to rem */
				height: auto;
				z-index: -1;
			}
			h1 {
				font-size: 2.5rem; /* Reduced size for better fit on mobile */
				font-weight: 700;
				line-height: 1;
				text-align: center;
				margin-bottom: 1em;
			}
			.instructions {
				margin-bottom: 2rem;
				border: 1px solid rgba(var(--accent-light), 25%);
				background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
				padding: 1.5rem;
				border-radius: 0.5rem; /* Converted to rem */
			}
			.instructions code {
				font-size: 0.8em; /* Already relative */
				font-weight: bold;
				background: rgba(var(--accent-light), 12%);
				color: rgb(var(--accent-light));
				border-radius: 0.25rem; /* Converted to rem */
				padding: 0.3em 0.4em;
			}
			.instructions strong {
				color: rgb(var(--accent-light));
			}
			.link-card-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(12ch, 1fr)); /* Adjusted for smaller screens */
				gap: 1rem; /* Reduced gap for better spacing on mobile */
				padding: 0;
			}
			.text-gradient {
				background-image: var(--accent-gradient);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-size: 400%;
				background-position: 0%;
			}
			.btn-custom {
				margin: 0.5rem 0; /* Add margin for spacing between buttons on mobile */
				width: 100%; /* Make buttons full-width on small screens */
			}
		</style>
	</head>
	<body class="bg-dark text-light">
		<main>
			<div class="fullscreen-container">
				<div class="text-center mt-5">
					<h1><span class="central text-gradient mb-4 neon">George Lapin </span></h1>
