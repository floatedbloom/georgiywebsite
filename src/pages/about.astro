---
import Layout from '../layouts/Layout.astro';
const pageTitle = "About";

title: "About"
layout: Layout
description: "This is the about page."

const facts = [
  "I play chess daily ♟",
  "I read deep books 📚",
  "I play tennis 🎾",
  "I have a cat 🐱",
  "I can throw a boomerang 🪃",
  "I high jump 🦘",
  "I love ping pong 🏓",
  "I play piano 🎹",
  "I love deep convos 💬",
  "I go to the gym 🏋️‍♂️",
  "I'm interested in startups 🚀",
  "I've won 4 hackathons 🥇",
];
const slides = [...facts, facts[0]];
---

<Layout title="About • Georgiy">
	<main>
			<div class="page-header">
				<h1><span class="text-gradient">{pageTitle}</span></h1>
			</div>
			<section class="about-section">
				<p class="bio">
					→ I’m an undergrad at UW Seattle.
				</p>
				<p class="bio">
					→ I’m a full‑stack developer with experience across AI, data science, and cybersecurity.
				</p>
				<p class="bio">
					→ I care about ultimately living a life of meaning, positively impacting the world through my work.
				</p>
				<p class="bio">
					→ I'm always open to new opportunities, reach out!
				</p>
				<div class="relative w-full max-w-lg mx-auto overflow-hidden">
					<div id="fact-carousel" class="flex transition-transform duration-500" data-total={slides.length}>
						{slides.map((fact) => (
						<div class="min-w-full flex items-center justify-center text-lg font-semibold p-6">
							{fact}
						</div>
						))}
					</div>
				</div>				  
			</section>
			<script>
				const carousel = document.getElementById('fact-carousel');
				if (carousel) {
				  const total = Number(carousel.dataset.total || 0);
				  let index = 0;
				  const advance = () => {
				    if (!total) return;
				    index += 1;
				    // animate to next slide
				    carousel.style.transition = 'transform 500ms ease';
				    carousel.style.transform = `translateX(-${index * 100}%)`;
				    // when we hit the cloned last slide, jump back to 0 without visible snap
				    if (index === total - 1) {
				      setTimeout(() => {
				        carousel.style.transition = 'none';
				        carousel.style.transform = 'translateX(0)';
				        index = 0;
				      }, 520);
				    }
				  };
				  setInterval(advance, 1500);
				}
			</script>		
	</main>
</Layout>

<style>
	.about-section {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.9));
		backdrop-filter: blur(15px);
		border: 2px solid rgba(168, 162, 158, 0.2);
		padding: 1.2rem;
		border-radius: 1rem;
		max-width: 30rem;
		margin: 0 auto;
		text-align: left;
	}

	.bio {
		font-size: 1.05em;
		line-height: 1.7;
		margin: 0 0 0.8rem 0;
		font-weight: 600;
	}
	
	main {
		color: #383a3c;
		margin: auto;
		padding: 1rem;
		padding-bottom: 80px;
		max-width: 800px;
		width: 100%;
		font-size: 20px;
		line-height: 1.6;
	}

	/* Adjust padding for mobile top navigation */
	@media (max-width: 768px) {
		main {
			padding-top: 100px;
			padding-bottom: 20px;
		}
	}
</style>
