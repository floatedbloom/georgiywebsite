<style>
	.text-grid {
		display: inline-grid;
		grid-template-columns: repeat(4, minmax(0, 10em)); /* Adjusts to 4 columns on desktop */
		grid-gap: 1em;
		justify-content: center;
		background: rgba(255, 255, 255, 0.2);
		padding: 1em;
		border-radius: 1em;
		position: relative;
		max-height: calc(100vh - 250px); /* Prevent overflow into bottom nav */
		overflow-y: auto; /* Allow scrolling if content is too tall */
		margin-top: -3rem; /* Move closer to header on desktop */
	}

	/* Override global page-header margin for this page */
	.page-header {
		margin: 1rem auto 0.5rem auto; /* Reduced bottom margin */
	}

	/* Responsive grid layout */
	@media (max-width: 1024px) {
		.text-grid {
			grid-template-columns: repeat(3, minmax(0, 10em)); /* 3 columns on tablets */
			max-height: calc(100vh - 220px);
			margin-top: -1rem; /* Less aggressive margin on tablets */
		}
	}

	@media (max-width: 768px) {
		.text-grid {
			grid-template-columns: repeat(2, minmax(0, 12em)); /* 2 columns on mobile */
			grid-gap: 0.8em;
			padding: 0.8em;
			max-height: calc(100vh - 200px);
			margin-top: 0; /* Reset margin on mobile for better spacing */
		}
	}

	@media (max-width: 480px) {
		.text-grid {
			grid-template-columns: 1fr; /* Single column on small mobile */
			grid-gap: 0.5em;
			padding: 0.5em;
			max-height: calc(100vh - 180px); /* More compact on small screens */
			margin-top: 0; /* Reset margin on small mobile */
		}
	}

	/* Each Sentence */
	.sentence {
		opacity: 0;
		transform: translateY(10px); /* Starts slightly lower */
		transition: opacity 0.6s ease-out, transform 0.6s ease-out;
	}

	/* Staggered animation for each sentence */
	.sentence:nth-child(1) { transition-delay: 0s; }
	.sentence:nth-child(2) { transition-delay: 0.1s; }
	.sentence:nth-child(3) { transition-delay: 0.2s; }
	.sentence:nth-child(4) { transition-delay: 0.3s; }
	.sentence:nth-child(5) { transition-delay: 0.4s; }
	.sentence:nth-child(6) { transition-delay: 0.5s; }
	.sentence:nth-child(7) { transition-delay: 0.6s; }
	.sentence:nth-child(8) { transition-delay: 0.7s; }
	.sentence:nth-child(9) { transition-delay: 0.8s; }
	.sentence:nth-child(10) { transition-delay: 0.9s; }
	.sentence:nth-child(11) { transition-delay: 1.0s; }
	.sentence:nth-child(12) { transition-delay: 1.1s; }
	.sentence:nth-child(13) { transition-delay: 1.2s; }
	.sentence:nth-child(14) { transition-delay: 1.3s; }
	.sentence:nth-child(15) { transition-delay: 1.4s; }
	.sentence:nth-child(16) { transition-delay: 1.5s; }
	.sentence:nth-child(17) { transition-delay: 1.6s; }
	.sentence:nth-child(18) { transition-delay: 1.7s; }
	.sentence:nth-child(19) { transition-delay: 1.8s; }
	.sentence:nth-child(20) { transition-delay: 1.9s; }
	.sentence:nth-child(21) { transition-delay: 2.0s; }
	.sentence:nth-child(22) { transition-delay: 2.1s; }
	.sentence:nth-child(23) { transition-delay: 2.2s; }
	.sentence:nth-child(24) { transition-delay: 2.3s; }

	.text-grid:hover .sentence {
		opacity: 1;
		transform: translateY(0);
	}

	/* Accessibility: Reduce Motion */
	@media (prefers-reduced-motion: reduce) {
		* {
			transition-duration: 0.1ms !important;
			transition-delay: 0s !important;
		}
	}

	.text-grid::before {
	content: "hover";
	text-transform: uppercase;
	color: #fad0c4;
	font-weight: bold;
	font-size: 1.5em;
	left: 50%;
	top: 45%;
	position: absolute;
	transform: translateX(-50%);
	transition: opacity 0.2s 3s ease-out;
	}

	/* Responsive hover text */
	@media (max-width: 768px) {
		.text-grid::before {
			font-size: 1.2em;
		}
	}

	@media (max-width: 480px) {
		.text-grid::before {
			content: "tap";
			font-size: 1em;
		}
	}

	.text-grid:hover::before {
	opacity: 0;
	transition-delay: 0s;
	}
	
	main {
		margin: auto;
		padding: 1rem;
		padding-bottom: 80px;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	/* Responsive main styling */
	@media (max-width: 768px) {
		main {
			padding: 0.8rem;
			padding-bottom: 70px;
			font-size: 18px;
			max-width: calc(100% - 1.6rem);
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 0.5rem;
			padding-bottom: 60px;
			font-size: 16px;
			max-width: calc(100% - 1rem);
		}
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 100%;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
	}

	/* Desktop-only h1 size reduction */
	@media (min-width: 1025px) {
		h1 {
			font-size: 3rem; /* Reduced from 4rem for desktop */
		}
	}

	/* Responsive h1 sizing */
	@media (max-width: 768px) {
		h1 {
			font-size: 3rem;
		}
	}

	@media (max-width: 480px) {
		h1 {
			font-size: 2rem;
		}
	}

	.smaller {
		font-size: 120%;
	}

	/* Responsive smaller class */
	@media (max-width: 768px) {
		.smaller {
			font-size: 100%;
		}
	}

	@media (max-width: 480px) {
		.smaller {
			font-size: 90%;
		}
	}

	.size {
		font-size: 0.8em;
	}

	/* Responsive size class */
	@media (max-width: 768px) {
		.size {
			font-size: 0.75em;
		}
	}

	@media (max-width: 480px) {
		.size {
			font-size: 0.7em;
		}
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	/* Responsive link-card-grid */
	@media (max-width: 768px) {
		.link-card-grid {
			grid-template-columns: repeat(auto-fit, minmax(20ch, 1fr));
			gap: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.link-card-grid {
			grid-template-columns: 1fr;
			gap: 1rem;
		}
	}
</style>
