---
import BottomNav from '../components/BottomNav.astro';
import '../styles/tailwind.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="George Lapin" />
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
		<link rel="icon" type="image/x-icon" href="zhe.ico" />
		<link rel="icon" href="/zhe.ico" type="image/png">
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
		<link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
		<link href="/timeline.min.css" rel="stylesheet" />
		<script src="/timeline.js" is:inline></script>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<BottomNav></BottomNav>
	</body>
</html>
<style is:global>
	html, body {
		margin: 0;
		font-family: 'Roboto Slab', serif;
		background: linear-gradient(315deg, #b8e1e0 3%, #a9bde3 38%, #a9bde3 68%, #2b2f3f 98%);
		animation: gradient 15s ease infinite ;
		background-size: 400% 400%;
		background-attachment: fixed;
		min-height: 100vh;
		margin: 0;
		text-align: center;
		position: relative;
	}

	/* Normalize between-element spacing across all pages (match index.astro) */
	main :where(h1, h2, h3, h4, h5, h6, p, ul, ol) { margin-top: 0 !important; margin-bottom: 0 !important; }
	main ul, main ol { padding-left: 1rem !important; }

	/* Responsive design for mobile devices */
	@media (max-width: 768px) {
		html, body {
			min-height: 100vh;
			background-attachment: scroll; /* Better performance on mobile */
		}
	}

	@media (max-width: 480px) {
		html, body {
			/* Remove extra padding that was pushing content down */
		}
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.central {
  		display: flex;
  		justify-content: center; /* Centers horizontally */
	}
	.content-container {
		transition: filter 0.3s;
	}
	
	:root {
            --accent-gradient: linear-gradient(135deg, #ffd1dc, #ffe5ec, #e7f0ff, #e5fff7);
        }
        
	h1, h2, h3, .page-header h1 {
		font-family: 'Poppins', 'Roboto Slab', serif;
	}
        
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 200%;
		font-size: 2em; /* Adjust font size as needed */
		font-weight: bold; /* Adjust font weight as needed */
		line-height: 1.2;
		padding-bottom: 0.2em;
		animation: shimmer 2s linear infinite;
	}

	/* Desktop-only text-gradient size reduction */
	@media (min-width: 1025px) {
		.text-gradient {
			font-size: 1.6em; /* Reduced from 2em for desktop */
		}
	}

	/* Responsive text gradient sizing */
	@media (max-width: 768px) {
		.text-gradient {
			font-size: 1.5em;
		}
	}

	@media (max-width: 480px) {
		.text-gradient {
			font-size: 1.2em;
		}
	}

	@keyframes shimmer {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}
	
	a {
		font-family: 'Lato', sans-serif;
		color: rgb(237, 206, 241); /* Default link color */
		text-decoration: none; /* Remove underline */
		transition: color 0.3s ease; /* Smooth color transition */
	}

	a:hover {
		color: #d368ca; /* Hover color */
	}

	a:visited {
		color: rgb(237, 206, 241); /* Visited link color */
	}

	a:focus,
	a:active {
		outline: none; /* Remove outline on focus and active states */
	}

	h1 {
		line-height: 1.2; 
		padding-bottom: 0.2em;
		font-size: 5rem; 
	}
	.text-center {
		text-align: center;
	}
	.btn-custom {
		font-size: 2.5rem; /* Adjust size as needed */
		padding: 2rem 4rem; /* Adjust padding as needed */
		margin: 1rem; /* Adjust margin for spacing between buttons */
	}
	.btn-custom:active {
		transform: translateY(2px); /* Push button down slightly on click */
	}
	.wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		flex-direction: column; /* Stack buttons vertically */
		align-items: center; /* Center items horizontally */
		gap: 20px; /* Space between buttons */
	}
	.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		margin: 0 auto;
		padding: 20px;
		box-sizing: border-box;
	}
	
	/* Responsive adjustments */
	@media (max-width: 768px) {
		.central {
			width: 90%;
		}
	}

	/* Global header styling for all pages except title page */
	.page-header {
		text-align: center;
		margin: 2rem auto;
		padding: 1rem;
		width: 100%;
		max-width: 800px;
		position: relative;
	}

	.page-header h1 {
		font-family: 'Roboto Slab', serif;
		font-size: 3.5rem;
		font-weight: 700;
		line-height: 1.2;
		margin: 0;
		padding: 0.5rem;
		/* Fix text clipping issues */
		overflow: visible;
		white-space: nowrap;
	}

	/* Desktop-only header size reduction */
	@media (min-width: 1025px) {
		.page-header h1 {
			font-size: 2.8rem; /* Reduced from 3.5rem for desktop */
		}
	}

	.page-header .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 200%;
		background-position: 0%;
		animation: shimmer 2s linear infinite;
		/* Prevent text cutoff */
		display: inline-block;
		padding: 0.2em 0.5em;
		overflow: visible;
	}

	/* Responsive header sizing */
	@media (max-width: 768px) {
		.page-header {
			margin: 1.5rem auto;
			padding: 0.8rem;
		}
		
		.page-header h1 {
			font-size: 2.8rem;
		}
	}

	@media (max-width: 480px) {
		.page-header {
			margin: 1rem auto;
			padding: 0.5rem;
		}
		
		.page-header h1 {
			font-size: 2.2rem;
			white-space: normal; /* Allow wrapping on very small screens */
		}
	}

	@keyframes shimmer {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}
	
	/* Responsive text gradient sizing */
	@media (max-width: 768px) {
		.text-gradient {
			font-size: 1.5em;
		}
	}

	@media (max-width: 480px) {
		.text-gradient {
			font-size: 1.2em;
		}
	}
	.tech-icon {
        font-size: 1.56rem;
        margin-bottom: 0.195rem;
        transition: transform 0.3s ease;
    }

    .tech-icon.emoji {
        font-size: 1.365rem;
        line-height: 1;
    }

    .astro-icon {
        width: 1.56rem;
        height: 1.56rem;
    }

    img.tech-icon {
        width: 2.08rem;
        height: 2.08rem;
        object-fit: contain;
    }
</style>
