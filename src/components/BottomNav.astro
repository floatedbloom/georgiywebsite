	<ul class="flex m-0 p-0 list-none">
		{links.map((link) => (
			<li>
				<a href={link.href} class="group flex flex-col items-center text-gray-700 dark:text-gray-200 no-underline hover:no-underline transition-transform px-4 hover:scale-105">
